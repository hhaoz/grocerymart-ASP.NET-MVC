<link rel="stylesheet" href="~/css/profile.css"/>

<div class="profile-container">
    <div class="sidebar">
        <div class="profile-header">
            <div class="avatar">
                <img class="avatar-img" src="assets/img/avatar.jpg" alt="User Avatar"/>
            </div>
            <div class="profile-info">
                <h3>John Doe</h3>
                <p>Registered on: January 15, 2023</p>
            </div>
        </div>
        <nav class="nav-links">
            <ul>
                <li><a href="#" id="profile-link" class="active" onclick="showContent('profile')">Profile</a></li>
                <li><a href="#" id="history-link" onclick="showContent('history')">Order History</a></li>
                <li><a href="#" id="favourites-link" onclick="showContent('favourites')">Favourites</a></li>
                <li><a href="#" id="addresses-link" onclick="showContent('addresses')">Addresses</a></li>
                <li><a href="#" id="settings-link" onclick="showContent('settings')">Settings</a></li>
                <li><a href="#" id="logout-link" onclick="logout()">Logout</a></li>
            </ul>
        </nav>
    </div>

    <div class="main-content">
        <div id="profile" class="content-section">
            <h2>Profile Information</h2>
            <p>Name: John Doe</p>
            <p>Email: johndoe@example.com</p>
            <p>Phone: +1 (555) 123-4567</p>
            <p>Address: 123 Main St, Springfield, IL, USA</p>
        </div>
        <div id="history" class="content-section" style="display:none;">
            <h2>Order History</h2>
            <table class="orders-table">
                <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>ORD12345</td>
                    <td>February 10, 2023</td>
                    <td>$45.99</td>
                    <td>Shipped</td>
                    <td><a href="/Order/Details/ORD12345" class="btn btn--link">View</a></td>
                </tr>
                <tr>
                    <td>ORD67890</td>
                    <td>March 15, 2023</td>
                    <td>$99.50</td>
                    <td>Delivered</td>
                    <td><a href="/Order/Details/ORD67890" class="btn btn--link">View</a></td>
                </tr>
                <tr>
                    <td>ORD11223</td>
                    <td>April 25, 2023</td>
                    <td>$75.00</td>
                    <td>Pending</td>
                    <td><a href="/Order/Details/ORD11223" class="btn btn--link">View</a></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div id="favourites" class="content-section" style="display:none;">
            <h2>Favourites</h2>
            <ul>
                <li>Product A - Price: $25.99</li>
                <li>Product B - Price: $45.00</li>
                <li>Product C - Price: $15.50</li>
            </ul>
        </div>
        <div id="addresses" class="content-section" style="display:none;">
            <h2>Addresses</h2>
            <p>Home Address: 123 Main St, Springfield, IL, USA</p>
            <p>Shipping Address: 456 Oak St, Springfield, IL, USA</p>
        </div>
        <div id="settings" class="content-section" style="display:none;">
            <h2>Settings</h2>
            <p>You can update your profile settings here.</p>
        </div>
    </div>
</div>

<script>
    function showContent(section) {
        const sections = document.querySelectorAll('.content-section');
        sections.forEach(section => section.style.display = 'none');

        document.getElementById(section).style.display = 'block';

        const links = document.querySelectorAll('.nav-links a');
        links.forEach(link => link.classList.remove('active'));
        document.getElementById(section + '-link').classList.add('active');
    }

    function logout() {
        alert('Logged out');
    }

    showContent('profile');
</script>